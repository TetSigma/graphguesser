{
  "compilerOptions": {
    /* Project Settings */
    "incremental": true, // Optional, improves rebuild speed
    "target": "es2016", // JavaScript language level to compile to
    "module": "commonjs", // Module system, CommonJS for Node.js

    /* Paths and Type Declarations */
    "baseUrl": "./", // Base directory for resolving non-relative module names
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"], // Include custom types directory

    /* JavaScript Interop */
    "esModuleInterop": true, // Easier imports for CommonJS modules
    "allowSyntheticDefaultImports": true, // Support synthetic imports
    
    /* Type Checking */
    "strict": true, // Enable all strict type-checking options
    "noImplicitAny": true, // Error for implicit 'any' types
    "strictNullChecks": true, // Ensure values are not 'null' unless specified
    "strictPropertyInitialization": true, // Enforce property initialization checks
    "noUnusedLocals": true, // Error on unused local variables
    "noUnusedParameters": true, // Error on unused parameters
    "noImplicitReturns": true, // Ensure functions return values on all code paths
    "noFallthroughCasesInSwitch": true, // Error for unintentional fall-throughs in switch cases

    /* Debugging and Source Maps */
    "sourceMap": true, // Create source map files for debugging
    "outDir": "./dist", // Output directory for compiled files

    /* Other Options */
    "forceConsistentCasingInFileNames": true, // Enforce consistent import file casing
    "skipLibCheck": true // Skip type checking on all .d.ts files
  },
  "include": ["src/**/*"], // Include files to be compiled
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}
